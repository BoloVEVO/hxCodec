<?xml version="1.0" encoding="UTF-8"?>
<xml>
	<pragma once="true" />

	<files id="haxe">
		<compilerflag value="-I${HXCODEC_PATH}project/vlc/include" />
	</files>

	<files id="__main__">
		<compilerflag value="-I${HXCODEC_PATH}project/vlc/include" />
	</files>

	<target id="haxe">
		<compilerflag value="-I${HXCODEC_PATH}project/utils" />

		<file name="${HXCODEC_PATH}project/utils/Dynamic2.cpp" />

		<section if="windows">
			<lib name="${HXCODEC_PATH}project/vlc/lib/Windows/libvlc.lib" if="HXCPP_M64" />
			<lib name="${HXCODEC_PATH}project/vlc/lib/Windows/libvlccore.lib" if="HXCPP_M64" />
		</section>

		<section if="macos">
			<lib name="${HXCODEC_PATH}project/vlc/lib/Mac/libvlc.5.dylib" if="HXCPP_M64" />
			<lib name="${HXCODEC_PATH}project/vlc/lib/Mac/libvlccore.7.dylib" if="HXCPP_M64" />
		</section>

		<section if="linux">
			<lib name="-lvlc" />
			<lib name="-lvlccore" />
		</section>

		<section if="android">
			<lib name="${HXCODEC_PATH}project/vlc/lib/Android/libvlc-64.so" if="HXCPP_ARM64" />
			<lib name="${HXCODEC_PATH}project/vlc/lib/Android/libvlc-v7.so" if="HXCPP_ARMV7" />
			<lib name="${HXCODEC_PATH}project/vlc/lib/Android/libvlc-x86.so" if="HXCPP_X86" />
			<lib name="${HXCODEC_PATH}project/vlc/lib/Android/libvlc-x86_64.so" if="HXCPP_X86_64" />
		</section>
	</target>
</xml>
